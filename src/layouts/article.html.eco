<!DOCTYPE html>
<html class="no-js" lang="ru">
<%- @partial('html-head') %>
<body class="kind-article">
	<nav class="site-nav off-canvas-nav">
		<span class="breadcrumbs">
			<button class="nav-icon js-menu-trigger"><i class="icon-menu"></i></button>
			<span class="breadcrumbs-path"><span class="separator">/</span><a href="/">Блог</a></span>
		</span>
		<div class="site-nav-container">
		<%- @partial('nav') %>
		</div>
	</nav>
	<div class="site-nav-overlay js-menu-overlay"></div>

	<div class="page-container">
		<div class="screen-content">
			
			<div class="content-container">
				<header class="page-header"></header>

				<aside class="meta">
					<ul class="meta-data">
						<li class="date"><%= //@formatDate(@document.created_at, 'DD MMMM YYYY') %></li>
						<li class="comments"><a href="<%= @document.path %>#disqus_thread" data-disqus-identifier="<%= @document.disqusid %>" >Комментарии</a></li>
						<li class="tags-list">
							<% for tag in @document.tags : %>
								<span class="label-tag"><%= tag %></span>
							<% end %>
						</li>
					</ul>
				</aside>

				<article class="page-content">
					<h1 class="article-title"><%- @document.title %></h1>
					<%- @content %>
				</article>
				
				<%- @partial('footer') %>

				<article id="disqus_thread"></article>


				<nav class="read-next">
					<h4 class="read-next-title">Читать дальше:</h4>
					<%- @getNavLinks() %>
				</nav>
			</div>
		</div><!-- screen-content -->
	</div><!-- page-container -->

	<%- @partial('scripts') %>
</body>
</html>