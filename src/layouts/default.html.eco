<!DOCTYPE html>
<html class="no-js" lang="ru">
<%- @partial('html-head') %>
<body class="layout-<%- @document.kind %>">
	<% if ((!@document.kind) or (@document.kind != 'article')) : %>
		<header class="page-header content-width">
			<%- @partial('hero') %>
		</header>
	<% end %>
	<nav class="site-navigation sticky-nav" id="sticker">
		<% if (@document.kind == 'article') : %>
			<button class="nav-icon js-menu-trigger"><i class="icon-menu"></i></button>
		<% end %>
	</nav>
	<% if (@document.kind == 'article') : %>
	<header class="page-header content-width">
		<aside class="article-meta content-width">
			<% if (@document.created_at) : %>
			<p class="date"><%= @moment(@document.created_at).lang('ru').format('DD MMMM YYYY') %></p>
			<% end %>
		</aside>
		<h1 class="article-title"><%- @document.title %></h1>
		<aside class="article-meta content-width inlined">
			<% if (@document.tags) : %>
			<span class="tags-list">
				<% for tag in @document.tags : %>
					<a class="tag" href="<%= @getTagUrl(tag) %>"><%= tag %></a>
				<% end %>
			</span>
			<% end %>
			<% if ((@site.disqus_shortname) and (@document.disqusid)) : %>
			<span class="comments"><a href="<%= @document.path %>#disqus_thread" data-disqus-identifier="<%= @document.disqusid %>" >Комментарии</a></span>
			<% end %>
		</aside>
	</header>
	<% end %>
	<article class="page-content content-width" role="main">
		<%- @content %>
	</article>
	<%- @partial('footer') %>
	<% if ((@site.disqus_shortname) and (@document.kind == 'article')) : %>
		<article id="disqus_thread"></article>
	<% end %>
	<% if (@document.kind == 'article') : %>
	<nav class="read-next">
		<h4 class="read-next-title">Читать дальше:</h4>
		<%- @getNavLinks() %>
	</nav>
	<% end %>
	<aside class="off-canvas-nav" role="navigation">
		<div class="mainmenu vertical-nav">
				<%- @partial('nav') %>
		</div>
	</aside>
	<div class="site-nav-overlay js-menu-overlay"></div>
	<%- @partial('scripts') %>
</body>
</html>